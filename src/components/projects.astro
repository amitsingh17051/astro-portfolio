    },
    {
        "projectTypeText" : "Movie Ticket Booking Website",
        "projectNameText" : "victorycinema.in",
        "projectDescText" : "Lorem ipsum dolor sit amet consectetur adipisicing elit. Blanditiis, culpa.",
