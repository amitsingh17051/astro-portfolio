    }
   
];
---


<section class="projects" id="portfolio">
    <div class="container">
       
        {projects.map((project, index) => (
            <>
                <div class={`single-project project-${index}`}>
                    <div class="row">

                        <div class="col-md-6 text-wrap">
                            <h4 class="text-warning">{project.projectTypeText}</h4>
                            <h1>{project.projectNameText}</h1>
                            <p>{project.projectDescText}</p>
                            <a target="_blank" href={project.projectHrefUrl}>{project.projectHrefUrlText}</a>
                        </div>

                        <div class="col-md-6 img-wrap">
                            <img src={project.projectImgUrl} alt="">
                        </div>
                    </div>
                </div>
            </>
        ))}

    </div>
</section>

<style>

    .single-project {
        padding:20px;
        margin-bottom:250px;
    }
    .single-project .row{
        display: flex;
        align-items: center;
    }
    .single-project h1{
       font-size: 45px;
       font-weight: 900;
    }
    .single-project p{
